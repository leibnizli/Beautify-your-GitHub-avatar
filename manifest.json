{
  "manifest_version": 3,
  "name": "Beautify your GitHub avatar",
  "version": "1.0",
  "description": "Beautify rounded corners from GitHub avatar.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/icon.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "https://github.com/*"
      ]
    }
  ],
  "permissions": [
    "storage"
  ],
  "options_page": "options.html"
}
